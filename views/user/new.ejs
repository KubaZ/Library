<h1>Stwórz użytkownika</h1>
<div class="row col-md-4" style="margin: 0 auto;">
  <form method="POST" action="/user/create" class="form" role="form">
    <% if (flash && flash.err) { %>
      <ul class="alert">
        <% Object.keys(flash.err).forEach(function (error) { %>
          <li><%= error %>: <%- JSON.stringify(flash.err[error]) %></li>
        <%  }) %>
      </ul>
    <% } %>
    <div class="form-group">
      <label for="name">Nazwa użytkownika: </label>
      <input class="form-control" name="name" type="text" placeholder="Nazwa użytkownika" />
    </div>
    <div class="form-group">
      <label for="email">Email: </label>
      <input class="form-control" name="email" type="text" placeholder="Email" />
    </div>
    <div class="form-group">
      <label for="password">Hasło: </label>
      <input class="form-control" name="password" type="password" placeholder="Hasło" />
    </div>
    <div class="form-group">
      <label for="confirmation">Powtórz hasło: </label>
      <input class="form-control" name="confirmation" type="password" placeholder="Hasło" />
    </div>
    <input type="submit" class="btn btn-default" value="Dodaj" />
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
  </form>
</div>

